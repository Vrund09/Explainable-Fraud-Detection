# ==================================================
# Explainable Fraud Detection - Environment Variables
# ==================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ========================================
# Neo4j Database Configuration
# ========================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_DATABASE=neo4j

# ========================================
# LLM API Keys (Required for AI Explanations)
# ========================================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API key (alternative LLM)
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# MLflow Configuration
# ========================================
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
# For remote tracking server:
# MLFLOW_TRACKING_URI=http://localhost:5000

# ========================================
# API Configuration
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_DEBUG=false

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO

# ========================================
# Environment Mode
# ========================================
ENVIRONMENT=development

# ========================================
# Security (Change in Production!)
# ========================================
API_SECRET_KEY=dev-secret-key-change-in-production
